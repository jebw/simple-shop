<h1>Listing orders</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>Town</th>
    <th>County</th>
    <th>Postcode</th>
  </tr>

<% for order in @orders %>
  <tr>
    <td><%=h order.name %></td>
    <td><%=h order.address1 %></td>
    <td><%=h order.address2 %></td>
    <td><%=h order.town %></td>
    <td><%=h order.county %></td>
    <td><%=h order.postcode %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

