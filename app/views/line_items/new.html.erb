<h1>New line_item</h1>

<% form_for(@line_item) do |f| %>
  <%= f.error_messages %>

  <p>
  	<%= f.label :product %><br />
	  	<%= f.collection_select :product_id, Product.all, :id, :name %>
  </p>
  <p>
  	<%= f.label :order %><br />
	  	<%= f.collection_select :order_id, Order.all, :id, :desc %>
  </p>
  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', line_items_path %>
